{
  "name": "datepickerjs",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "examples"
  ],
  "sideEffects": [
    ".ts"
  ],
  "main": "./dist/datepickerjs.cjs",
  "module": "./dist/datepickerjs.js",
  "types": "./dist/datepickerjs.d.ts",
  "exports": {
    ".": {
      "import": "./dist/datepickerjs.js",
      "require": "./dist/datepickerjs.cjs",
      "types": "./dist/datepickerjs.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prebuild": "pnpm test && pnpm lint && pnpm format",
    "build": "tsc && vite build",
    "api-extract": "api-extractor run --local --verbose",
    "api-docs": "pnpm api-documenter markdown -i temp -o docs",
    "build-and-doc": "pnpm build && pnpm api-extract && pnpm api-docs",
    "analyze": "pnpm build --report"
  },
  "devDependencies": {
    "@eslint/js": "9.7.0",
    "@microsoft/api-documenter": "7.25.7",
    "@microsoft/api-extractor": "7.47.2",
    "@types/node": "20.14.11",
    "@typescript-eslint/eslint-plugin": "7.16.1",
    "@typescript-eslint/parser": "7.16.1",
    "@vitest/coverage-v8": "2.0.3",
    "@vitest/ui": "2.0.3",
    "eslint": "9.7.0",
    "eslint-config-prettier": "9.1.0",
    "globals": "15.8.0",
    "husky": "9.0.11",
    "jsdom": "24.1.0",
    "lint-staged": "15.2.7",
    "prettier": "3.3.3",
    "typescript": "5.5.3",
    "typescript-eslint": "7.16.1",
    "vite": "5.3.4",
    "vite-plugin-dts": "3.9.1",
    "vite-plugin-eslint": "1.8.1",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "2.0.3"
  }
}
