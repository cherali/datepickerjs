{
  "name": "datepickerjs",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "examples"
  ],
  "sideEffects": [
    ".ts"
  ],
  "main": "./dist/datepickerjs.cjs",
  "module": "./dist/datepickerjs.js",
  "types": "./dist/datepickerjs.d.ts",
  "exports": {
    ".": {
      "import": "./dist/datepickerjs.js",
      "require": "./dist/datepickerjs.cjs",
      "types": "./dist/datepickerjs.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "test-ui": "vitest --ui",
    "test-ui-cov": "vitest --ui --coverage.enabled=true",
    "prebuild": "pnpm test && pnpm lint && pnpm format",
    "build": "tsc && vite build",
    "api-extract": "api-extractor run --local --verbose",
    "api-docs": "pnpm api-documenter markdown -i temp -o docs",
    "build-and-doc": "pnpm build && pnpm api-extract && pnpm api-docs",
    "analyze": "pnpm build --report",
    "dev": "vite"
  },
  "devDependencies": {
    "@eslint/js": "9.9.1",
    "@microsoft/api-documenter": "7.25.12",
    "@microsoft/api-extractor": "7.47.7",
    "@types/node": "22.5.2",
    "@typescript-eslint/eslint-plugin": "8.3.0",
    "@typescript-eslint/parser": "8.3.0",
    "@vitest/coverage-v8": "2.0.5",
    "@vitest/ui": "2.0.5",
    "eslint": "9.9.1",
    "eslint-config-prettier": "9.1.0",
    "globals": "15.9.0",
    "husky": "9.1.5",
    "jsdom": "25.0.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "rollup-plugin-esbuild": "6.1.1",
    "typescript": "5.5.4",
    "typescript-eslint": "8.3.0",
    "vite": "5.4.2",
    "vite-plugin-dts": "4.1.0",
    "vite-plugin-eslint": "1.8.1",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "2.0.5"
  }
}
